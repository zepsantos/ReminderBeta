<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    tools:context="com.example.josep.reminderbeta.Settings.MembersFragment">

    <ImageView
        android:id="@+id/returnbutton"
        android:layout_width="45dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="start|top"
        android:tint="@color/bb_darkBackgroundColor"
        app:srcCompat="@drawable/ic_keyboard_backspace_black_48dp" />

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/returnbutton"
        android:layout_centerHorizontal="true">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/membersview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/returnbutton"
            android:layout_centerHorizontal="true"
            android:scrollbars="vertical">

        </android.support.v7.widget.RecyclerView>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/fabaddtogroup"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center"
            android:visibility="gone" />
    </android.support.design.widget.CoordinatorLayout>


</RelativeLayout>
